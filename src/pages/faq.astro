---
import Layout from '../layouts/Layout.astro';
import { FAQ } from '../components/FAQ';
---

<Layout title="FAQ">
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-primary mb-4">Frequently Asked Questions</h1>
      <p class="text-lg text-muted-foreground">Find answers to common questions about our service</p>
    </div>

    <div class="space-y-4 h-[calc(100vh-20rem)]">
      <FAQ client:load />
    </div>
  </main>
</Layout>